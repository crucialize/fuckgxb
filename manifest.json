{
    "manifest_version": 2,
    "name": "gxb mooc ass-istant",
    "description": "97#",
    "version": "1.2.0",
    "background": {
        "scripts": [
            "back.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "https://*.gaoxiaobang.com/*"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "./popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.gaoxiaobang.com/*"
            ],
            "js": [
                "watch.js"
            ]
        }
    ]
}